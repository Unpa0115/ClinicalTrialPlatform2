{
  "name": "clinical-trial-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@clinical-trial/frontend",
    "dev:backend": "npm run dev --workspace=@clinical-trial/backend",
    "build": "npm run build --workspace=@clinical-trial/frontend && npm run build --workspace=@clinical-trial/backend",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}