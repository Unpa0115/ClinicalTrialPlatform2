# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3001

# Database Configuration
# DYNAMODB_ENDPOINT=http://localhost:8000  # Comment out for AWS DynamoDB
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_PROFILE=

# Cognito設定 (Backend - 従来のウェブアプリケーション)
COGNITO_USER_POOL_ID=your-cognito-user-pool-id
COGNITO_BACKEND_CLIENT_ID=your-cognito-backend-client-id
# COGNITO_BACKEND_CLIENT_SECRET=your-cognito-backend-client-secret
COGNITO_DOMAIN=https://your-cognito-domain.auth.region.amazoncognito.com

# フロントエンド用Cognito設定 (SPA - シングルページアプリケーション)
VITE_COGNITO_USER_POOL_ID=your-cognito-user-pool-id
VITE_COGNITO_CLIENT_ID=your-cognito-client-id
VITE_COGNITO_DOMAIN=https://your-cognito-domain.auth.region.amazoncognito.com

# JWT Configuration
# JWT_SECRET=your-jwt-secret-key-here
# JWT_EXPIRES_IN=24h

# Frontend Configuration
VITE_API_URL=http://localhost:3001